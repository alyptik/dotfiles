.SH "NAME"
struct_ccwgroup_device \- ccw group device
.SH "SYNOPSIS"
.sp
.nf
struct ccwgroup_device {
  enum state;
  unsigned int count;
  struct device dev;
  struct work_struct ungroup_work;
  struct ccw_device * cdev[0];
};  
.fi
