#!/bin/bash

declare -a input
input+=("$@")
[[ ! -t 0 ]] && mapfile -O "${#input[@]}" -td ' ' input
# [[ ! -t 0 ]] && readarray -t input </dev/stdin
glob="$(printf "%s" {z..A} "@?>=<;:" {0..9} "\/.-,+*)(\'&%\$#\"!")"

# <<<"${input[@]}" sed "y/$(printf '%s' {a..z} {A..Z})/𝓪𝓫𝓬𝓭𝓮𝓯𝓰𝓱𝓲𝓳𝓴𝓵𝓶𝓷𝓸𝓹𝓺𝓻𝓼𝓽𝓾𝓿𝔀𝔁𝔂𝔃𝓐𝓑𝓒𝓓𝓔𝓕𝓖𝓗𝓘𝓙𝓚𝓛𝓜𝓝𝓞𝓟𝓠𝓡𝓢𝓣𝓤𝓥𝓦𝓧𝓨𝓩/"
<<<"${input[@]}" sed 'y/'"$glob"'/𝔃𝔂𝔁𝔀𝓿𝓾𝓽𝓼𝓻𝓺𝓹𝓸𝓷𝓶𝓵𝓴𝓳𝓲𝓱𝓰𝓯𝓮𝓭𝓬𝓫𝓪`_^]\[𝓩𝓨𝓧𝓦𝓥𝓤𝓣𝓢𝓡𝓠𝓟𝓞𝓝𝓜𝓛𝓚𝓙𝓘𝓗𝓖𝓕𝓔𝓓𝓒𝓑𝓐@¿›⁼‹;:⁰¹²³⁴⁵⁶⁷⁸⁹\/·¯¸⁺★⁾⁽´&%♮♯¨¡/'
