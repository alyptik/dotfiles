function zle-refresh-keymap {
	setescapes
	case "$_km" in
	vi)
		bindkey -e
		bindkey -v
		printf "$cline"
		printf "$cgrey";
		_km=vi _vi=main _emacs=
		;;
	emacs)
		bindkey -v
		bindkey -e
		printf "$cblock"
		printf "$cyellow";
		_km=emacs _vi= _emacs=main
		;;
	esac
	zle -R
}

