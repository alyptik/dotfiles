if ((!$#)); then
	printf '%s\n' "no command specified"
	return 1
elif ! type "$1" >/dev/null 2>&1; then
	printf '%s(%s: [%s])\n' \
		"invalid command specified" \
		"command line" \
		"$*"
	exit 2
fi

function fake_tty()
{
	script -qfc "$(printf '%q ' "$@")"
	rm -f ./typescript
}

fake_tty "$@" 2>&1 | tee build.log
