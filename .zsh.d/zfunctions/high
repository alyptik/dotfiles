local theme syn out file

if (( $# > 1 )); then theme="$1"; shift; fi
if (( $# > 1 )); then syn="$1"; shift; fi
if (( $# > 1 )); then out="$1"; shift; fi

if [[ ! -t 0 || "$1" == - ]]; then
	file="/dev/stdin"
else
	file="$1"
	shift
fi

highlight --out-format="${out:-truecolor}" --syntax="${syn:-conf}" --style="${theme:-xoria256}" "$file" | \
	LESS= less -MNRis
